event(OnChannelMessage,kveventbotnoise)
{
	# kveventbotnoise - KVIrc event script. Â© un1versal 2016
	# License: GPLv2+ https://git.io/vKLjk
	# Version: 1.0.1
	# Source: https://git.io/vKq7Q

	if ($context.networkName == "freenode")
	{
		%nick = $0
		%chan = #kvirc
		%stripcolor = $str.stripcolors($3)

		if($chan.name != %chan)
			return;

		if($str.match(Not-*,%nick))
		{
			if(($str.contains(%stripcolor,"unlabeled",0)) || ($str.contains(%stripcolor,"labeled",0)))
			{
				#echo "silenced %nick on labeling/unlabelling issue."
				halt;
			}
		}
	}
}

eventctl -eq OnChannelMessage kveventbotnoise
